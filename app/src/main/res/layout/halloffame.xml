<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:padding="20dp"
    android:layout_marginLeft="5dp"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/nametitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/student_image"
        />
    <TextView
        android:id="@+id/namestudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textSize="20dp"
        android:layout_toRightOf="@id/nametitle"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/student_image"
        />
    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Job:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/nametitle"
        />
    <TextView
        android:id="@+id/jobstudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Current Job"
        android:layout_toRightOf="@id/job"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:layout_below="@id/nametitle"
        />
    <TextView
        android:id="@+id/jobdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Decription:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/job">

    </TextView>

    <TextView
        android:id="@+id/studentjobdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Job Description"
        android:textSize="20dp"
        android:minLines="1"
        android:maxLines="5"
        android:layout_below="@id/jobdec"
        />
    <TextView
        android:id="@+id/CGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/studentjobdec"
        />
    <TextView
        android:id="@+id/student_CGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA"
        android:layout_toRightOf="@id/CGPA"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:layout_below="@id/studentjobdec"
        />
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/CGPA"
        />
    <TextView
        android:id="@+id/studentcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/city"
        android:layout_below="@id/CGPA"
        />
    <TextView
        android:id="@+id/graduation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year of graduation:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/city"
        />
    <TextView
        android:id="@+id/studentgraduation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="year"
        android:textSize="20dp"
        android:layout_toRightOf="@id/graduation"
        android:layout_below="@id/city"
        />

</RelativeLayout>